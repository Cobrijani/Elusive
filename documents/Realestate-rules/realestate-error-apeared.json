{
    "trigger": {
        "schedule": {
            "interval": "1m"
        }
    },
    "input": {
        "search": {
            "request": {
                "body": {
                    "size": 0,
                    "query": {
                        "bool": {
                            "must": [
                                {
                                    "match_phrase": {
                                        "severity": "ERROR"
                                    }
                                }
                            ]
                        }
                    }
                },
                "indices": [
                    "appbeat-*"
                ]
            }
        }
    },
    "condition": {
        "compare": {
            "ctx.payload.hits.total": {
                "gt": 0
            }
        }
    },
    "actions": {
        "my-logging-action": {
            "logging": {
                "text": "[RULE TRIGGERED] Error appeared in realestate application."
            }
        }
    }
}
