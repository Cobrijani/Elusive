{
    "trigger": {
        "schedule": {
            "interval": "1m"
        }
    },
    "input": {
        "search": {
            "request": {
                "body": {
                    "size": 0,
                    "query": {
                        "bool": {
                            "must": [
                                {
                                    "match_phrase": {
                                        "action": "CREATING_ADVERT"
                                    }
                                },
                                {
                                    "match_phrase": {
                                        "logmessage": "created an advert"
                                    }
                                }
                            ],
                            "filter": [{
                                "range": {
                                    "@timestamp": {
                                        "gte": "now-30m"
                                    }
                                }
                            }]
                        }
                    },
                    "aggs": {
                        "group_by_username": {
                            "terms": {
                                "field": "username.keyword",
                                "size": 5
                            }
                        }
                    }
                },
                "indices": [
                    "appbeat-*"
                ]
            }
        }
    },
    "condition": {
        "array_compare": {
            "ctx.payload.aggregations.group_by_username.buckets": {
                "path": "doc_count",
                "gte": {
                    "value": 5
                }
            }
        }
    },
    "actions": {
        "my-logging-action": {
            "logging": {
                "text": "[RULE TRIGGERED] User created more than 5 adverts in last half hour. {{ctx.payload.aggregations.group_by_username.buckets}}"
            }
        }
    }
}
