{
  "trigger": {
    "schedule": {
      "interval": "1m"
    }
  },
  "input": {
    "search": {
      "request": {
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "must": [{
                  "match": {
                    "httpversion": "1.1"
                  }
                },
                {
                  "match": {
                    "referrer": "http://www.izdajemstan.com/"
                  }
                },
                {
                  "match": {
                    "response": "401"
                  }
                }
              ],
              "filter": [{
                "range": {
                  "@timestamp": {
                    "gte": "now-30m"
                  }
                }
              }]
            }
          },
          "_source": ["response", "referrer", "httpversion"]

        },
        "indices": [
          "apachebeat-*"
        ]
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gte": 4000
      }
    }
  },
  "actions": {
    "my-logging-action": {
      "logging": {
        "text": "[RULE TRIGGERED] There are more than 4000 requests coming from referrer 'http://www.izdajemstan.com/' with status code 401"
      }
    },
    "index_payload" : { 
       "transform": {
            "script" : {
              "lang" : "painless",
              "inline" : "def alarms = []; for (int i = 0; i < ctx.payload.hits.hits.length; ++i){ def source = ctx.payload.hits.hits[i]._source; source.timestamp = ctx.execution_time; alarms.add(source); } return ['_doc' : alarms];" 
            }
        },
       "index" : {
        "index" : "<alarms-{now/d{YYYY.MM.dd|+01:00}}>", 
        "doc_type" : "aparche",
        "execution_time_field" : "timestamp"  
      }
    },  
    "send_email" : {
      "email" : {
        "to" : "cobrijani@gmail.com",
        "subject" : "Alarm for Apache!",
        "body" : "There are more than 4000 requests coming from referrer 'http://www.izdajemstan.com/' with status code 401",
        "priority" : "high"
      }
    }
  }
}
