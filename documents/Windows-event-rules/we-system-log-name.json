{
  "trigger": {
    "schedule": {
      "interval": "1m"
    }
  },
  "input": {
    "search": {
      "request": {
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "must": [{
                "match": {
                  "log_name": "System"
                }
              }],
              "filter": [{
                "range": {
                  "@timestamp": {
                    "gte": "now-3h"
                  }
                }
              }]
            }
          },
          "aggs": {
            "group_by_computer_name": {
              "terms": {
                "field": "computer_name.keyword"
              }
            }
          }
        },
        "indices": [
          "winlogbeat-*"
        ]
      }
    }
  },
  "condition": {
    "array_compare": {
      "ctx.payload.aggregations.group_by_computer_name.buckets": {
        "path": "doc_count",
        "gte": {
          "value": 20
        }
      }
    }
  },
  "actions": {
    "my-logging-action": {
      "logging": {
        "text": "[RULE TRIGGERED] Some of the computers are reporting more than 20 System logs that occured in last 3 hours"
      }
    }
  }
}
