{
  "trigger": {
    "schedule": {
      "interval": "1m"
    }
  },
  "input": {
    "search": {
      "request": {
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "must": [{
                "match": {
                  "source_name": "Microsoft-Windows-Windows Firewall With Advanced Security"
                }
              }],
              "filter": [{
                "range": {
                  "@timestamp": {
                    "gte": "now-3h"
                  }
                }
              }]
            }
          },
          "aggs": {
            "group_by_computer_name": {
              "terms": {
                "field": "computer_name.keyword"
              }
            }
          }
        },
        "indices": [
          "winlogbeat-*"
        ]
      }
    }
  },
  "condition": {
    "array_compare": {
      "ctx.payload.aggregations.group_by_computer_name.buckets": {
        "path": "doc_count",
        "gte": {
          "value": 200
        }
      }
    }
  },
  "actions": {
    "my-logging-action": {
      "logging": {
        "text": "[RULE TRIGGERED] Some of the computers are reporting more than 200 \"Microsoft-Windows-Windows Firewall With Advanced Security\" that occured in last 3 hours"
      }
    },
     "index_payload" : { 
       "transform": {
            "script" : {
              "lang" : "painless",
              "inline" : "def alarm = new HashMap(); alarm.timestamp = ctx.execution_time; alarm.message = 'Some of the computers are reporting more than 200 \"Microsoft-Windows-Windows Firewall With Advanced Security\" that occured in last 3 hours'; return ['_doc' : alarm];" 
            }
        },
       "index" : {
        "index" : "<windowsalarms-{now/d{YYYY.MM.dd|+01:00}}>", 
        "doc_type" : "windows",
        "execution_time_field" : "timestamp"  
      }
    },  
    "send_email" : {
      "email" : {
        "to" : "cobrijani@gmail.com",
        "subject" : "Alarm for Windows event!",
        "body" : "Some of the computers are reporting more than 200 \"Microsoft-Windows-Windows Firewall With Advanced Security\" that occured in last 3 hours",
        "priority" : "high"
      }
    }
  }
}
