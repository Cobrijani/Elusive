{
  "trigger": {
    "schedule": {
      "interval": "1m"
    }
  },
  "input": {
    "search": {
      "request": {
        "body": {
          "query": {
            "bool": {
              "must": [{
                "match": {
                  "action": "DROP"
                }
              }],
              "filter": [{
                "range": {
                  "@timestamp": {
                    "gte": "now-30m"
                  }
                }
              }]
            }
          },
          "aggs": {
            "group_by_src_ip": {
              "terms": {
                "field": "src-ip.keyword",
                "size": 100
              }
            }
          },
          "_source": ["src-ip", "src-ip.keyword"]
        },
        "indices": [
          "firebeat-*"
        ]
      }
    }
  },
  "condition": {
    "array_compare": {
      "ctx.payload.aggregations.group_by_src_ip.buckets": {
        "path": "doc_count",
        "gte": {
          "value": 100
        }
      }
    }
  },
  "actions": {
    "my-logging-action": {
      "logging": {
        "text": "There are more than 100 (exactly: \n {{ctx.payload.aggregations.group_by_src_ip.buckets}} DROPS FROM IP ADDRESSES: \n {{ctx.payload.aggregations.group_by_src_ip.buckets}}"
      }
    }
  }
}
