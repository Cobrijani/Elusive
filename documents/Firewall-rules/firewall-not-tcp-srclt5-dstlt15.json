{
  "trigger": {
    "schedule": {
      "interval": "1m"
    }
  },
  "input": {
    "search": {
      "request": {
        "body": {
          "query": {
            "bool": {
              "must": [{
                  "match": {
                    "path": "RECEIVE"
                  }
                },
                {
                  "match": {
                    "src-ip": "89.216.18.1"
                  }
                },
                {
                  "match": {
                    "dst-ip": "89.216.18.19"
                  }
                }
              ],
              "must_not": [{
                "match": {
                  "protocol": "TCP"
                }
              }],
              "filter": [{
                "range": {
                  "@timestamp": {
                    "gte": "now-3h"
                  }
                }
              }]
            }
          },
          "_source": ["path", "src-port", "dst-port", "protocol", "size", "src-ip", "dst-ip"]
        },
        "indices": [
          "firebeat-*"
        ]
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gte": 1
      }
    }
  },
  "actions": {
    "my-logging-action": {
      "logging": {
        "text": "[RULE TRIGGERED] There are {{ctx.payload.hits.total}} forbidden network requests!! src=89.216.18.1|dst=89.216.18.19|!TCP|RECEIVE"
      }
    }
  }
}
