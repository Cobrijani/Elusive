{
  "trigger": {
    "schedule": {
      "interval": "1m"
    }
  },
  "input": {
    "search": {
      "request": {
        "body": {
          "query": {
            "bool": {
              "must": [{
                  "match": {
                    "path": "RECEIVE"
                  }
                },
                {
                  "match": {
                    "tcpflags": "Ack"
                  }
                },
                {
                  "range": {
                    "dst-port": {
                      "gte": 18
                    }
                  }
                },
                {
                  "range": {
                    "src-port": {
                      "lte": 2
                    }
                  }
                }
              ],
              "filter": [{
                "range": {
                  "@timestamp": {
                    "gte": "now-30m"
                  }
                }
              }]
            }
          },
          "_source": ["path", "tcpflags", "src-port", "dst-port"]
        },
        "indices": [
          "firebeat-*"
        ]
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gte": 1
      }
    }
  },
  "actions": {
    "my-logging-action": {
      "logging": {
        "text": "[RULE TRIGGERED] There are {{ctx.payload.hits.total}} forbidden network requests!! [src-port<=2|dst-port=>18|Ack|RECEIVE]"
      }
    }
  }
}
